<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchPage">



    <LinearLayout
        android:id="@+id/searchbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#EFEFEF"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:background="@null"
                android:drawableStart="@drawable/img_51"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/clear_search"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#222222"
                android:textSize="20sp"
                android:textColorHint="#666666"
                android:singleLine="true"/>
        </FrameLayout>


        <TextView
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="16sp"
            android:textColor="#9D7B7E"
            android:padding="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchbar2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Tags with underline -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Account"
            android:textSize="16sp"
            android:textColor="#666666"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Options"
            android:textSize="16sp"
            android:textColor="#666666"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="More"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/options"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">


        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/one"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIG"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIG"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/first"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">


        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/two"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internshala"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internshala"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/second"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Profile picture -->
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/three"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cattooo"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cattooo"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/third"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">


        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/four"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northen"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northen_Beauty"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/fourth"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Profile picture -->
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ten"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOm_-"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tommmyyy"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/sixth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/fifth"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Profile picture -->
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/eleven"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hana"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont text"
                android:textSize="17sp"
                android:textColor="#777777" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>